<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" >

  <TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:text="@string/theme"
    android:textSize="30sp" />

  <Spinner
    android:id="@+id/spinnerTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:entries="@array/optionsTheme" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/spinnerTheme"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:text="@string/controls"
    android:textSize="30sp" />

  <Spinner
    android:id="@+id/spinnerControls"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:entries="@array/optionsControls" />

  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/spinnerControls"
    android:layout_marginTop="60dp"
    android:textSize="30sp"
    android:text="@string/viewMode" />

  <Spinner
    android:id="@+id/spinnerView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView3"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:entries="@array/optionsView" />

  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/spinnerView"
    android:layout_marginTop="60dp"
    android:textSize="30sp"
    android:text="@string/speed" />

  <Spinner
    android:id="@+id/spinnerSpeed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView4"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:entries="@array/optionsDifficulty" />

  <Button
    android:id="@+id/button1"
    android:layout_below="@+id/spinnerSpeed"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:layout_width="200dp"
    android:layout_height="75dp"
    android:textSize="30sp"
    android:onClick="back"
    android:text="@string/back" />

</RelativeLayout>
