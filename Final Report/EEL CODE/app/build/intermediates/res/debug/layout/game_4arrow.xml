<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >


  <FrameLayout
    android:id="@+id/gameFrame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/upArrow"
    android:layout_marginBottom="-15dp" >

    <ImageView
      android:layout_width="1166dp"
      android:layout_height="1035dp"
      android:src="@drawable/fish"
        android:id="@+id/fish"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />
  </FrameLayout>


  <ImageView
    android:id="@+id/leftArrow"
    android:layout_width="100dp"
    android:layout_height="75dp"
      android:onClick="leftClick"
    android:src="@drawable/leftarrow"
      android:layout_alignTop="@+id/score"
      android:layout_toLeftOf="@+id/downArrow"
      android:layout_marginRight="58dp" />

  <ImageView
    android:id="@+id/rightArrow"
    android:layout_width="100dp"
    android:layout_height="75dp"
      android:onClick="rightClick"
      android:src="@drawable/rightarrow"
      android:layout_alignTop="@+id/score"
      android:layout_toRightOf="@+id/downArrow"
      android:layout_marginLeft="55dp" />

  <ImageView
    android:id="@+id/downArrow"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="-10dp"
    android:gravity="center"
    android:onClick="downClick"
    android:src="@drawable/downarrow" />

  <ImageView
    android:id="@+id/upArrow"
    android:layout_width="75dp"
    android:layout_height="75dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="65dp"
    android:gravity="center"
    android:onClick="upClick"
    android:src="@drawable/uparrow" />

  <TextView
    android:id="@+id/score"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="50dp"
    android:gravity="center"
    android:text="0"
    android:textSize="25dp" />

</RelativeLayout>
